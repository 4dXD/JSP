<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>JJYLDisplayBooksServlet</servlet-name>
        <servlet-class>club.admin.JJYLDisplayBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JJYLAddBookServlet</servlet-name>
        <servlet-class>club.admin.JJYLAddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JJYLLoanServlet</servlet-name>
        <servlet-class>club.cart.JJYLLoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JJYLCartServlet</servlet-name>
        <servlet-class>club.cart.JJYLCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JJYLClearCartServlet</servlet-name>
        <servlet-class>club.cart.JJYLClearCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JJYLMemberAdminServlet</servlet-name>
        <servlet-class>club.admin.JJYLMemberAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JJYLDisplayBooksServlet</servlet-name>
        <url-pattern>/JJYLDisplayBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JJYLAddBookServlet</servlet-name>
        <url-pattern>/JJYLAddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JJYLLoanServlet</servlet-name>
        <url-pattern>/JJYLLoanServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JJYLLoanServlet</servlet-name>
        <url-pattern>/JJYLLoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JJYLCartServlet</servlet-name>
        <url-pattern>/JJYLCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JJYLClearCartServlet</servlet-name>
        <url-pattern>/JJYLClearCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JJYLMemberAdminServlet</servlet-name>
        <url-pattern>/JJYLMemberAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>JJYLIndex.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/JJYLError.jsp</location>
    </error-page>
    <context-param>
        <param-name>booksFilePath</param-name>
        <param-value>/WEB-INF/books.txt</param-value>
    </context-param>
</web-app>
